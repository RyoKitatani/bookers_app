<h1>Books</h1>
<table border="1">
    <thread>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thread>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td ><%= link_to "Destroy", books_path, method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
        <% end %>
        </tbody>
    </table>